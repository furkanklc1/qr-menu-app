// Veritabanı bağlantısı
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --- TABLOLAR ---

// Restoran Masaları
model Table {
  id        Int      @id @default(autoincrement())
  name      String
  qrCode    String   @unique
  isActive  Boolean  @default(true)
  orders    Order[]
}

// Kategoriler
model Category {
  id        Int       @id @default(autoincrement())
  name      String
  image     String?
  products  Product[]
}

// Ürünler
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  image       String?
  isAvailable Boolean  @default(true)
  
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  
  orderItems  OrderItem[]
}

// Garsonlar
model Waiter {
  id          Int      @id @default(autoincrement())
  name        String
  status      WaiterStatus @default(AVAILABLE)
  createdAt   DateTime @default(now())
  
  orders      Order[]
}

// Siparişler
model Order {
  id          Int         @id @default(autoincrement())
  createdAt   DateTime    @default(now())
  readyAt     DateTime?   // Hazır olduğu zaman
  servedAt    DateTime?   // Servis edildiği zaman
  status      OrderStatus @default(PENDING)
  priority    OrderPriority @default(NORMAL)
  totalAmount Decimal     @db.Decimal(10, 2)
  
  tableId     Int
  table       Table       @relation(fields: [tableId], references: [id])
  
  waiterId    Int?
  waiter      Waiter?     @relation(fields: [waiterId], references: [id])
  
  items       OrderItem[]
  payment     Payment?
}

// Sipariş Detayı
model OrderItem {
  id        Int     @id @default(autoincrement())
  quantity  Int
  price     Decimal @db.Decimal(10, 2)
  
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])
  
  productId Int
  product   Product @relation(fields: [productId], references: [id])
}

// Ödeme
model Payment {
  id            Int           @id @default(autoincrement())
  amount        Decimal       @db.Decimal(10, 2)
  method        PaymentMethod @default(CREDIT_CARD)
  status        PaymentStatus @default(SUCCESS)
  transactionId String?
  
  orderId       Int           @unique
  order         Order         @relation(fields: [orderId], references: [id])
}

// Enumlar
enum OrderStatus {
  PENDING
  PREPARING
  READY
  SERVED
  CANCELLED
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

enum WaiterStatus {
  AVAILABLE
  BUSY
  ON_BREAK
}

enum OrderPriority {
  LOW
  NORMAL
  HIGH
  VIP
}